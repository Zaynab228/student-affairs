@model IEnumerable<Students_Affaires.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Table of Courses.....</h1>

<p>
    <a asp-action="Create" class="btn btn-info"> Add New Course </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.level)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
