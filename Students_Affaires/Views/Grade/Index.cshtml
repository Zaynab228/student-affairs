@model IEnumerable<Students_Affaires.Models.Grade>

@{
    ViewData["Title"] = "Index";
}

<h1>Table of Grades.....</h1>

<p>
    <a asp-action="Create" class="btn btn-info"> Add New Grade </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GradeOfStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeOfStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GradeID" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GradeID" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GradeID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
